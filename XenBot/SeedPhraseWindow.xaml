<Window x:Class="XenBot.SeedPhraseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XenBot"
        mc:Ignorable="d"
        Title="SeedPhraseWindow" Height="200" Width="1050">
    <Grid>
        <Label Content="Seed Phrase" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SeedWords" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left" Margin="89,104,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="901"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="950,142,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
